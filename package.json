{
  "name": "litmus9.com",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "biome check",
    "typecheck": "tsc --noEmit",
    "typecheck:stories": "tsc --project tsconfig.stories.json",
    "preview": "vite preview",
    "knip": "knip",
    "check-all": "pnpm knip && pnpm lint && pnpm typecheck && pnpm typecheck:stories",
    "prepare": "lefthook install",
    "launch-playwright-sse": "pnpm dlx @playwright/mcp@latest --port 8931 --headless",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate-stories": "tsx scripts/generate-stories.ts",
    "check-stories": "tsx scripts/check-stories.ts",
    "screenshot": "storycap http://localhost:6006 -o .reg/actual -V 320x568 -V 375x667 -V 414x896 -V 768x1024 -V 1024x768 -V 1280x720 -V 1440x900 -V 1920x1080",
    "screenshot:server": "storycap --serverCmd \"pnpm storybook\" --serverTimeout 60000",
    "screenshot:ci": "storycap --serverCmd \"pnpm storybook -- --ci\" --serverTimeout 60000",
    "visual-test": "reg-suit run",
    "visual-test:update": "reg-suit run --update",
    "visual-compare": "reg-cli .reg/actual .reg/expected .reg/diff -R .reg/report.html",
    "chromatic": "chromatic"
  },
  "knip": {
    "entry": [
      "src/main.tsx"
    ],
    "project": [
      "src/**/*.{ts,tsx}"
    ],
    "ignore": [
      "src/**/*.stories.tsx",
      "src/stories/**",
      ".storybook/**",
      "src/**/*.d.ts",
      "src/utils/**",
      ".git/**"
    ],
    "ignoreDependencies": [
      "@types/styled-components",
      "@playwright/test",
      "@types/puppeteer"
    ]
  },
  "dependencies": {
    "@types/styled-components": "^5.1.34",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0-beta.5",
    "@chromatic-com/storybook": "4.1.3",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/react-vite": "9.1.16",
    "@types/node": "^22.15.29",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.5.0",
    "babel-plugin-styled-components": "^2.1.4",
    "chromatic": "13.3.4",
    "knip": "^5.59.1",
    "lefthook": "^1.11.13",
    "reg-cli": "^0.18.10",
    "reg-suit": "^0.14.4",
    "storybook": "9.1.16",
    "storycap": "^5.0.1",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
